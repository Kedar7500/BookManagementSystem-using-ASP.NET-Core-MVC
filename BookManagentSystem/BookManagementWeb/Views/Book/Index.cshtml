@{
}
@model IEnumerable<Book>
<h2>List Of Books</h2>
<table class="table table-bordered table-striped table-sm">
    <thead>
        <tr>
            <th>BookId</th>
            <th>Title</th>
            <th>Author</th>
            <th>Publication</th>
            <th>Price</th>
            <th>BookType</th>
            <th>Created Date</th>
            <th>Updated Date</th>
            <th>Update Book</th>
            <th>Delete Book</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var bk in Model)
        {
            <tr>
                <td>@bk.BookId</td>
                <td>@bk.Title</td>
                <td>@bk.Author</td>
                <td>@bk.Publication</td>
                <td>@bk.Price</td>
                <td>@bk.BookType</td>
                <td>@bk.Created</td>
                <td>@bk.Updated</td>
                <td><a asp-action="Update" asp-controller="Book" asp-route-BookId="@bk.BookId">Update</a></td>
                <td><a asp-action="Delete" asp-controller="Book" asp-route-BookId="@bk.BookId" onclick="return confirm('Are you sure ? Do you want to delete this book?')">Delete</a> </td>
            </tr>
            
        }
    </tbody>

</table>
<a asp-action="Create" asp-controller="Book">Create New Book</a>
